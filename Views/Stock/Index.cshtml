@model IEnumerable<StockDisplayModel>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Stocks";
}

<div class="container mt-3">
    <h4 class="mb-3">Stocks</h4>

    <!-- Search form -->
    <form asp-action="Index" method="get" class="d-flex gap-2 mb-3 flex-wrap">
        <input type="text" name="sTerm" class="form-control w-auto" placeholder="Search by book" />
        <button type="submit" class="btn btn-primary">Find</button>
        <a asp-action="Index" asp-controller="Stock" class="btn btn-secondary">Clear</a>
    </form>

    <!-- Stocks table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="text-white" style="background-color: #0b1a3d;">
                <tr>
                    <th>Book</th>
                    <th>Stock</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BookName</td>
                            <td style="white-space: nowrap;">@item.Quantity</td>
                            <td class="text-center">
                                <a asp-action="ManangeStock" asp-controller="Stock" asp-route-bookId="@item.BookId" class="btn btn-sm btn-info">
                                    Update Stock
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No stocks found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
