@model BookDTO
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Update Book";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 500px;">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Update Book</h4>

            <form asp-action="UpdateBook" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Image" />

                <div class="mb-3">
                    <label asp-for="BookName" class="form-label">Book*</label>
                    <input type="text" class="form-control" asp-for="BookName" />
                    <span asp-validation-for="BookName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AuthorName" class="form-label">Author*</label>
                    <input type="text" class="form-control" asp-for="AuthorName" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GenreId" class="form-label">Genre*</label>
                    <select class="form-select" asp-for="GenreId" asp-items="Model.GenreList">
                        <option value="">Select Genre</option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price*</label>
                    <input type="number" class="form-control" asp-for="Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label">Image</label>
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <div class="mb-2 text-center">
                            <img src="/img/@Model.Image" style="width:100px; height:100px; object-fit:cover;" class="img-thumbnail" />
                        </div>
                    }
                    <input type="file" class="form-control" asp-for="ImageFile" />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-info">Update</button>
                    <a asp-action="Index" asp-controller="Book" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
