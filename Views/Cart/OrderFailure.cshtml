@{
    ViewData["Title"] = "OrderFailure";
}

<div class="failure-container">
    <svg class="crossmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
        <circle class="crossmark-circle" cx="26" cy="26" r="25" fill="none" />
        <path class="crossmark-line crossmark-line1" d="M16 16 36 36" />
        <path class="crossmark-line crossmark-line2" d="M36 16 16 36" />
    </svg>
    <h1>Order Failed</h1>
    <div class="btn-group">
        <a href="/" class="btn">🏠 Home</a>
        <a href="/" class="btn retry">🔄 Retry Order</a>
    </div>
</div>

<style>
    /* Scope everything under .failure-container */
    .failure-container {
        font-family: Arial, sans-serif;
      
        text-align: center;
        margin-top: 80px;
    }

        .failure-container .crossmark {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            display: inline-block;
            box-shadow: inset 0px 0px 0px #f44336;
            animation: failure-fill 0.4s ease-in-out 0.4s forwards, failure-scale 0.3s ease-in-out 0.9s both;
        }

        .failure-container .crossmark-circle {
            stroke: #f44336;
            stroke-width: 2;
            stroke-dasharray: 166;
            stroke-dashoffset: 166;
            fill: none;
            animation: failure-stroke 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards;
        }

        .failure-container .crossmark-line {
            stroke: #fff;
            stroke-width: 4;
            stroke-dasharray: 48;
            stroke-dashoffset: 48;
        }

        .failure-container .crossmark-line1 {
            animation: failure-stroke 0.3s cubic-bezier(0.65, 0, 0.45, 1) 0.8s forwards;
        }

        .failure-container .crossmark-line2 {
            animation: failure-stroke 0.3s cubic-bezier(0.65, 0, 0.45, 1) 1.1s forwards;
        }

        .failure-container h1 {
          
            font-size: 1.6rem;
            margin-top: 20px;
        }

        .failure-container .btn-group {
            margin-top: 25px;
        }

        .failure-container .btn {
            display: inline-block;
            padding: 10px 22px;
            margin: 0 8px;
            border-radius: 25px;
            background: #f44336;
          
            text-decoration: none;
            font-size: 15px;
            transition: background 0.3s ease;
        }

            .failure-container .btn:hover {
                background: #d32f2f;
            }

            .failure-container .btn.retry {
                background: #ff9800;
            }

                .failure-container .btn.retry:hover {
                    background: #e68900;
                }

    /* Scoped keyframes to avoid conflicts */
    @@keyframes failure-stroke {
        100%

    {
        stroke-dashoffset: 0;
    }

    }

    @@keyframes failure-scale {
        0%, 100%

    {
        transform: none;
    }

    50% {
        transform: scale3d(1.1,1.1,1);
    }

    }

    @@keyframes failure-fill {
        100%

    {
        box-shadow: inset 0px 0px 0px 60px #f44336;
    }

    }
</style>
