@model CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout - BookMart</title>
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --primary-color: #1f2937; /* Dark navy for navbar background */
            --secondary-color: #f9fafb; /* Very light gray for background */
            --accent-color: #0ea5e9; /* Bright blue accent (buttons/links) */
            --danger-color: #ef4444; /* Red for errors or danger */
            --success-color: #10b981; /* Green for success */
        }


        body {
            background-color: #f8f9fc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--dark-color);
        }

        .checkout-container {
            max-width: 1000px;
            margin: 30px auto;
        }

        .checkout-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.08);
            overflow: hidden;
            animation: fadeIn 0.6s ease;
        }

        .checkout-header {
            background: #1f2937;
            color: white;
            padding: 25px 30px;
            position: relative;
        }

            .checkout-header h1 {
                font-weight: 600;
                margin: 0;
                font-size: 1.8rem;
            }

            .checkout-header::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, var(--success-color), var(--accent-color));
            }

        .checkout-body {
            padding: 30px;
        }

        .section-title {
            position: relative;
            padding-bottom: 15px;
            margin-bottom: 25px;
            font-weight: 600;
            color: var(--primary-color);
        }

            .section-title::after {
                content: '';
                position: absolute;
                left: 0;
                bottom: 0;
                height: 3px;
                width: 50px;
                background: var(--accent-color);
                border-radius: 3px;
            }

        .form-label {
            font-weight: 500;
            margin-bottom: 8px;
            color: var(--dark-color);
        }

        .form-control {
            padding: 12px 16px;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(78, 115, 223, 0.15);
            }

        .input-group-icon {
            position: relative;
        }

            .input-group-icon .form-control {
                padding-left: 45px;
            }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #a0a0a0;
            z-index: 5;
        }

        .btn-next {
            background: linear-gradient(120deg, var(--success-color), #17a673);
            color: white;
            border: none;
            padding: 14px 30px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 8px rgba(28, 200, 138, 0.3);
            width: 100%;
            margin-top: 10px;
        }

            .btn-next:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(28, 200, 138, 0.4);
            }

        .validation-summary {
            background-color: #f8f9fc;
            border-left: 4px solid var(--primary-color);
            padding: 15px 20px;
            margin-bottom: 25px;
            border-radius: 4px;
        }

        .field-validation-error {
            font-size: 0.85rem;
            margin-top: 6px;
            display: block;
        }

        /* Animation */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .checkout-container

        {
            padding: 0 15px;
        }

        .checkout-body {
            padding: 20px;
        }

        }
    </style>
</head>
<body>
    <div class="checkout-container">
        <div class="checkout-card">
            <div class="checkout-header">
                <h1><i class="fas fa-lock me-2"></i> Checkout</h1>
            </div>

            <div class="checkout-body">
                <form asp-action="Checkout">
                    <h4 class="section-title">Personal Information</h4>

                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label">Name *</label>
                            <div class="input-group-icon">
                                <i class="fas fa-user input-icon"></i>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Your full name" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger field-validation-error"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">Email *</label>
                            <div class="input-group-icon">
                                <i class="fas fa-envelope input-icon"></i>
                                <input type="email" class="form-control" asp-for="Email" placeholder="your.email@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger field-validation-error"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="MobileNumber" class="form-label">Mobile Number *</label>
                            <div class="input-group-icon">
                                <i class="fas fa-phone input-icon"></i>
                                <input type="tel" class="form-control" asp-for="MobileNumber" placeholder="+91 123 456 7890" />
                            </div>
                            <span asp-validation-for="MobileNumber" class="text-danger field-validation-error"></span>
                        </div>
                    </div>

                    <h4 class="section-title">Delivery Information</h4>

                    <div class="mb-4">
                        <label asp-for="Address" class="form-label">Delivery Address *</label>
                        <div class="input-group-icon">
                            <i class="fas fa-map-marker-alt input-icon" style="top: 20px;"></i>
                            <textarea class="form-control" asp-for="Address" rows="4" placeholder="Your complete delivery address"></textarea>
                        </div>
                        <span asp-validation-for="Address" class="text-danger field-validation-error"></span>
                    </div>

                    <h4 class="section-title">Payment Method</h4>

                    <div class="mb-4">
                        <label asp-for="PaymentMethod" class="form-label">Select Payment Method *</label>
                        <div class="input-group-icon">
                            <i class="fas fa-credit-card input-icon"></i>
                            <select asp-for="PaymentMethod" class="form-control">
                                <option value="">Select Payment Method</option>
                                @foreach (var method in Enum.GetValues(typeof(BookMart.Constants.PaymentMethods)))
                                {
                                    <option value="@method.ToString()">@method.ToString()</option>
                                }
                            </select>
                        </div>
                        <span asp-validation-for="PaymentMethod" class="text-danger field-validation-error"></span>
                    </div>

                    <div class="mt-5">
                        <button type="submit" class="btn-next">
                            <i class="fas fa-arrow-right me-2"></i> Proceed to Payment
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>