@model GenreDTO
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Add Genre";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Add Genre</h4>

            <form asp-action="AddGenre">
                @* <input type="hidden" asp-for="Id" /> *@

                <div class="mb-3">
                    <label asp-for="GenreName" class="form-label">Genre</label>
                    <input type="text" class="form-control" asp-for="GenreName" />
                    <span asp-validation-for="GenreName" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-info">Add</button>
                    <a asp-action="Index" asp-controller="Genre" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
